<!-- Portfolio Grid Section -->
    <section id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Portfolio</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                {% for page in pages if page.id starts with 'portfolio/' %}
                    <div class="col-sm-4 portfolio-item">
                        {% if page.meta.extlink %}
                        <a href="{{ page.meta.extlink }}" class="portfolio-link" data-toggle="modal">
                        {% else %}
                        <a href="{{ base_url ~ '/' ~ page.meta.link }}" class="portfolio-link" data-toggle="modal">
                        {% endif %}
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="{{ base_url ~ '/' ~ page.meta.image }}" class="img-responsive" alt="">
							<br>
                        </a>
						<h3 class="text-center">{{ page.title }}</h3>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
