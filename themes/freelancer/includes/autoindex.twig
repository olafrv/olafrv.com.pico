<!-- Portfolio Grid Section -->
    <section id="portafolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3>Index :: {{ url_param('root','string') }} </h3>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                {% for page in pages|sort_by("id")|reverse if page.id starts with url_param('root','string') and  not ( page.url ends with 'index' ) %}
                    <div class="col-sm-12 portfolio-item">
                        <a href="{{ base_url ~ '/' ~ page.id ~ "?post=yes" }}" class="portfolio-link" data-toggle="modal">
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
									 <h3 class="text-center">{{ page.title }}</h3>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
