<!-- Navigation -->
<nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
<!--
    <a href="https://github.com/olafrv/olafrv.com.pico"><img style="position: absolute; top: 0; left: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_left_red_aa0000.png" alt="Fork me on GitHub"></a>
-->
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#page-top" class="navbar-brand">{{ site_title }}</a>            
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li class="page-scroll">
                    <a href="{{ base_url }}">Home</a>
                </li>
                {% if 'portfolio' not in pages.index.meta.disable %}
                <li class="page-scroll">
                    <a href="{{ base_url ~ '#portfolio' }}">Portfolio</a>
                </li>
                {% endif %}
                {% if 'code' not in pages.index.meta.disable %}
                <li class="page-scroll">
                    <a target="_blank" href="{{ pages.index.meta.code }}">Code</a>
                </li>
                {% endif %}
                {% if 'news' not in pages.index.meta.disable %}
                <li class="page-scroll">
                    <a href="{{ base_url ~ '#news' }}">News</a>
                </li>
                {% endif %}
                {% if 'about' not in pages.index.meta.disable %}
                    <li class="page-scroll">
                        <a href="{{ base_url ~ '#about' }}">About</a>
                    </li>
                {% endif %}
                {% if 'contact' not in pages.index.meta.disable %}
                    <li class="page-scroll">
                        <a href="{{ base_url ~ '#contact' }}">Contact</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->

    {# Show YAML Errors #}
    {% for page in pages if page.meta.YAML_ParseError %}
        <p style="
            color: white;
            text-align: center;
            background-color: darkred;
            margin-bottom: -25px;
            text-transform: none;
        ">Header Error in <a href="{{ page.url }}">{{ page.id }}</a>, {{ page.meta.YAML_ParseError }}</p>
    {% endfor %}

</nav>
